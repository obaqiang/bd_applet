<view class="mem_area">
  <view class="mem_title">会员信息</view>
  <view class="info_area">
    <text>手机</text>
    <input type="text" placeholder="请填写手机号码" />
  </view>
  <view class="info_area">
    <text>姓名</text>
    <input type="text" placeholder="请填写姓名" />
  </view>
  <view class="info_area">
    <text>密码</text>
    <input type="password" placeholder="请填写密码" />
  </view>
   <view class="type_area">
    <text>会员卡类型</text>
    <text class="card">至尊卡</text>
  </view>

  <button class="btn_sure">确定</button>
</view>