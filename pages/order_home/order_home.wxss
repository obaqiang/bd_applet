/* pages/order_home/order_home.wxss */

.slide-image {
  width: 100%;
  height: 300rpx;
}

.info_area {
  margin: 20rpx 30rpx;
  overflow: hidden;
  border-top: 1rpx dashed #ddd;
  border-bottom: 1rpx dashed #ddd;
  line-height: 100rpx;
  position: relative;
  background: #fff;
}

.info_area image {
  width: 50rpx;
  height: 30rpx;
}

.info_area_text {
  color: #666;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.btn_get {
  background: #1aac19;
  color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
  float: right;
  margin-top: 24rpx;
}

.shop_info {
  overflow: hidden;
  border-bottom: 1rpx dashed #ddd;
  position: relative;
}

.shop_icon {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
}

.shop_name {
  font-size: 30rpx;
  position: absolute;
  left: 150rpx;
  top: 10rpx;
}

.shop_location {
  font-size: 30rpx;
  position: absolute;
  top: 50rpx;
  left: 150rpx;
  color: #8e8e8e;
}

.shop_phone {
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-right: 50rpx;
  margin-top: 20rpx;
}

.shop_type {
  position: relative;
  overflow: hidden;
  border-bottom: 1rpx dashed #ddd;
  line-height: 100rpx;
}

.type_icon {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
  float: left;
}

.type_head {
  font-size: 30rpx;
  color: #666;
}

.type_name {
  color: #8f8f8f;
  font-size: 30rpx;
}

.intro_area {
  font-size: 30rpx;
  display: block;
  color: #909090;
  padding: 0rpx 50rpx 40rpx;
  line-height: 50rpx;
}

.recommend_scroll_x_box {
  height: 245rpx;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 230rpx;
  height: 245rpx;
  margin-right: 0rpx;
  margin-left: 24rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 230rpx;
  height: 143rpx;
}

.swiper_icon {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
  float: left;
}

.swiper_head {
  float: left;
  margin: 30rpx 0rpx;
  font-size: 30rpx;
  color: #666;
}

.see_card {
  border: 1rpx solid #1aac19;
  width: 100rpx;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  right: 0;
  top: 25rpx;
  border-radius: 10rpx;
  color: #1aac19;
  font-size: 30rpx;
}
